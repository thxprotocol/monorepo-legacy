{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "lib": ["ES2021"],
        "target": "ES2021",
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "outDir": "../../dist/out-tsc",
        "module": "commonjs",
        "types": ["node"]
    },
    "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts"],
    "include": [
        "scripts/**/*.ts",
        "src/**/*.ts",
        "../../package.json",
        "./src/openapi.json",
        "./package.json",
        "../../libs/common/**/*",
        "../../libs/contracts/**/*",
        "../../libs/contracts/package.json"
    ]
}
