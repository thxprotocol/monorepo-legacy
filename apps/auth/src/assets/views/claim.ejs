<div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 order-0 order-sm-1">
    <div class="text-center pb-4 pt-4">
        <img src="/img/logo.png" width="60" alt="THX Logo" />
    </div>
    <div class="card shadow-sm mb-5">
        <div class="card-body pt-sm-5 px-sm-5 pb-md-4">
            <% if (locals.alert && alert.message) { %>
            <div class="alert alert-<%= alert.variant %>">
                <%= alert.message %>
            </div>
            <% } %>

            <form autocomplete="off" action="/oidc/<%= uid %>/login" method="post" class="mb-4">
                <strong class="h2 d-block text-dark text-center mb-4">
                    Claim <span class="text-primary"><%= params.rewardData.withdrawAmount %>
                        <%= params.rewardData.tokenSymbol %></span>
                </strong>
                <p>
                    Sign in to your THX Web Wallet to claim this reward.
                    <a href="#" data-toggle="tooltip"
                       title="We will create a new account if the email address used for authentication has not been used for a sign up.">
                        <i class="fas fa-question-circle" aria-hidden="true"></i>
                    </a>
                </p>

                <input type="hidden" name="returnUrl" value="<%= params.return_url %>" />
                <input type="hidden" name="rewardHash" value="<%= params.reward_hash %>" />

                <% if (params.googleLoginUrl) { %>
                <a class="btn btn-sign-in btn-google btn-block" href="<%= params.googleLoginUrl %>" download>
                    <div class="logo">
                        <img src="/img/g-logo.png" alt="Google logo" />
                    </div>
                    <div class="label">Sign in with Google</div>
                </a>
                <% } %>
                <% if (params.twitterLoginUrl) { %>
                <a class="btn btn-sign-in btn-twitter btn-block" href="<%= params.twitterLoginUrl %>">
                    <div class="logo">
                        <img src="/img/t-logo.png" alt="Twitter logo" />
                    </div>
                    <div class="label">Sign in with Twitter</div>
                </a>
                <% } %>
                <% if (params.githubLoginUrl) { %>
                <a class="btn btn-sign-in btn-github btn-block" href="<%= params.githubLoginUrl %>">
                    <div class="logo">
                        <img src="/img/github-logo.png" alt="Spotify logo" />
                    </div>
                    <div class="label">Sign in with Github</div>
                </a>
                <% } %>
                <% if (params.authRequestMessage) { %>
                <a class="btn btn-sign-in btn-metamask btn-block" @click="signin()">
                    <div class="logo">
                        <img src="/img/mm-logo.svg" width="30" height="30" alt="Metamask logo" />
                    </div>
                    <div class="label">
                        Sign in with Metamask
                    </div>
                </a>
                <% } %>

            </form>

        </div>
    </div>
</div>