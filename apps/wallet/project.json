{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/wallet/src",
    "targets": {
        "build": {
            "executor": "@nx-plus/vue:browser",
            "options": {
                "dest": "dist/apps/wallet",
                "index": "apps/wallet/public/index.html",
                "main": "apps/wallet/src/main.ts",
                "tsConfig": "apps/wallet/tsconfig.app.json"
            },
            "configurations": {
                "production": {
                    "mode": "production",
                    "filenameHashing": true,
                    "productionSourceMap": true,
                    "css": {
                        "extract": true,
                        "sourceMap": false
                    }
                }
            }
        },
        "serve": {
            "executor": "@nx-plus/vue:dev-server",
            "options": {
                "port": 8083,
                "devServer": {
                    "https": {
                        "key": "./certs/localhost.key",
                        "cert": "./certs/localhost.crt"
                    }
                },
                "browserTarget": "wallet:build"
            },
            "configurations": {
                "production": {
                    "browserTarget": "wallet:build:production"
                }
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/wallet/**/*.{ts,tsx,vue}"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/apps/wallet"],
            "options": {
                "jestConfig": "apps/wallet/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": ["frontend"]
}
