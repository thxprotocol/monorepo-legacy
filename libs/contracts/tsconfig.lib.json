{
    "extends": "./tsconfig.json",

    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "lib": ["ES2021"],
        "module": "commonjs",
        "target": "ES2021",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "hardhat.config.ts",
        "./scripts",
        "./deploy",
        "./test",
        "./exports",
        "./exports/**/*.json",
        "typechain/**/*"
    ],
    "ts-node": { "files": true }
}
